{
  "name": "@tbk/auth",
  "version": "1.0.0",
  "description": "Enterprise-grade authentication library for The Bazaar marketplace",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "private": true,
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./client": {
      "import": "./src/client.ts",
      "require": "./src/client.ts",
      "types": "./src/client.ts"
    },
    "./server": {
      "import": "./src/server.ts",
      "require": "./src/server.ts",
      "types": "./src/server.ts"
    },
    "./hooks": {
      "import": "./src/hooks/index.ts",
      "require": "./src/hooks/index.ts",
      "types": "./src/hooks/index.ts"
    },
    "./context": {
      "import": "./src/context/index.ts",
      "require": "./src/context/index.ts",
      "types": "./src/context/index.ts"
    },
    "./middleware": {
      "import": "./src/middleware/index.ts",
      "require": "./src/middleware/index.ts",
      "types": "./src/middleware/index.ts"
    },
    "./types": {
      "import": "./src/types/index.ts",
      "require": "./src/types/index.ts",
      "types": "./src/types/index.ts"
    }
  },
  "scripts": {
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.88.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "next": "^15.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.18.1"
  },
  "keywords": [
    "auth",
    "supabase",
    "authentication",
    "thebazaar"
  ],
  "author": "The Bazaar Team",
  "license": "UNLICENSED"
}
