{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "api-client",
  "sourceRoot": "libs/api-client/src",
  "projectType": "library",
  "tags": ["scope:api-client", "type:lib"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/api-client",
        "main": "libs/api-client/src/index.ts",
        "tsConfig": "libs/api-client/tsconfig.json",
        "assets": []
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "libs/api-client"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/libs/api-client"],
      "options": {
        "command": "vitest run --config libs/api-client/vitest.config.ts",
        "cwd": "{workspaceRoot}"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --config libs/api-client/vitest.config.ts",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
