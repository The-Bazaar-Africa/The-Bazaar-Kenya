{
  "name": "the-bazaar-kenya",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "nx run-many -t dev --projects=main-app,vendor-portal,admin-portal,backend-api",
    "dev:main": "nx dev main-app",
    "dev:vendor": "nx dev vendor-portal",
    "dev:admin": "nx dev admin-portal",
    "dev:api": "nx dev backend-api",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o storybook-static",
    "build": "nx run-many -t build",
    "build:main": "nx build main-app",
    "build:vendor": "nx build vendor-portal",
    "build:admin": "nx build admin-portal",
    "build:api": "nx build backend-api",
    "lint": "nx run-many -t lint",
    "lint:check-boundaries": "nx lint api-client",
    "typecheck": "nx run-many -t typecheck",
    "test": "nx run-many -t test",
    "test:api-client": "nx test api-client",
    "generate:api-types": "tsx scripts/generate-api-types.ts",
    "graph": "nx graph",
    "affected": "nx affected",
    "affected:build": "nx affected -t build",
    "affected:test": "nx affected -t test",
    "legacy:main": "cd shadcn-ui && pnpm dev",
    "legacy:vendor": "cd vendor-dashboard && pnpm dev",
    "legacy:admin": "cd admin-portal && pnpm dev"
  },
  "devDependencies": {
    "@nx/eslint": "22.3.3",
    "@nx/eslint-plugin": "^22.3.3",
    "@nx/jest": "^22.3.3",
    "@nx/js": "22.3.3",
    "@nx/next": "22.3.3",
    "@storybook/addon-essentials": "8",
    "@storybook/addon-interactions": "8",
    "@storybook/addon-links": "8",
    "@storybook/blocks": "8",
    "@storybook/react": "8",
    "@storybook/react-vite": "8",
    "@storybook/test": "^8.6.15",
    "@swc/jest": "^0.2.39",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nx": "22.3.3",
    "openapi-typescript": "^7.10.1",
    "storybook": "8",
    "supabase": "^2.70.5",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.89.0",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.15.7",
    "date-fns": "^3.0.0",
    "zod": "^4.2.1"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^19.0.0",
      "@types/react-dom": "^19.0.0",
      "@swc/helpers": "^0.5.17",
      "@swc/core": "^1.15.7",
      "date-fns": "^3.0.0"
    }
  }
}
